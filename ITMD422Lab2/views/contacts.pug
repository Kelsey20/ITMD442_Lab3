extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href='/contacts/add') Add a Contact
  hr
  if contacts.length > 0
   #contacts-wrapper 
    <table style="width:100%">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address </th>
        <th>Note </th>
      </tr>
      each val in contacts 
        tr.contacts-list 
          th(data-contactid=val.id)
            a(href='/contacts/' + val.id)= val.firstName
          th(data-contactid=val.id)
            a(href='/contacts/' + val.id)= val.lastName
          th(data-contactid=val.id)
            a(href='/contacts/' + val.id)= val.email
          th(data-contactid=val.id)
            a(href='/contacts/' + val.id)= val.notes
    </table>
    
          
         






       
        
          
            